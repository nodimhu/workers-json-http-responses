    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["esnext"],
    "module": "esnext",
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "types": [
      "@cloudflare/workers-types",
      "@types/jest",
      "jest-environment-miniflare/globals"
